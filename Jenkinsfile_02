#!groovy

pipeline {
    environment {
        JAVA_TOOL_OPTIONS = "-Duser.home=/usr/share/maven/"
    }
    agent {
        docker {
            image "maven:3.6.0-jdk-13"
            
            args "-v /tmp/maven:/usr/share/maven/.m2 -e MAVEN_CONFIG=/usr/share/maven/.m2"
        }
    }

    stages {
        stage("Build") {
            steps {
                sh "mvn -version"
                sh "mvn clean install"
            }
        }
    }

    post {
        always {
            cleanWs()
        }
    }
}
